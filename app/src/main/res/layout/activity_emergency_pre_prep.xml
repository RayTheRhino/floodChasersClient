<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".Activities.PrePrepActivity"
    android:background="@drawable/ic_launcher_background_wave_up">

    <!-- Header: User Profile Picture and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--        <ImageView-->
<!--            android:layout_width="48dp"-->
<!--            android:layout_height="48dp"-->
<!--            android:src="@drawable/user_profile_picture" />-->
        <TextView
            android:id="@+id/username"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cogwheel" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Flood Safety Guidelines"
        android:padding="16dp"
        android:id="@+id/TV_pre_prep"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/IMV_pre_prep_im"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:src="@drawable/emergencyguid"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Tv_pre_prep_info"
                    android:background="@drawable/edit_text"
                    android:padding="10dp"
                    android:text="עוד לפני היציאה לאזור השיטפונות ובמהלך הנסיעה להיות בהאזנה שוטפת לדיווחי תחנות הרדיו, לתחזיות מזג האוויר של השירות המטאורולוגי ולדיווחים המופיעים בין היתר בזירות הדיגיטליות כגון אתרי אינטרנט ודפי פייסבוק של משטרת ישראל ורשות הטבע והגנים.\nזאת במטרה להתעדכן באזורים המועדים לפורענות והחסימות בכבישים שאליהם לא מומלץ להגיע, וגם לקבל מידע על המקומות הבטוחים יחסית לצפייה בשיטפונות. בעניין זה ניתן גם לפנות למוקד המידע של רשות הטבע והגנים בטלפון 3639* ולהתעדכן במבזקים באתר האינטרנט של רשות הטבע והגנים.\n
להצטייד במיכל דלק מלא, ביגוד חם, תאורה ניידת, מטען סמארטפון, מי שתייה ומזון.\n זאת למקרה שתיאלצו באופן לא מתוכנן להמתין זמן ממושך עד לפתיחת כביש חסום בנתיב נסיעתכם.\n
לפעול בשיקול דעת , לא לקחת סיכונים מיותרים ולא לגרום לאחרים להסתכן בגלל המעשים שלכם. כוחות ההצלה והפקחים בשטח יהיו עמוסים גם ככה – אל תעמיסו עליהם עוד עבודה.\n
להישמע באופן מלא להנחיות התנועה והבטיחות של הצוותים בשטח ביניהם: כוחות המשטרה, כיבוש אש וכמובן פקחי רשות הטבע והגנים הפרוסים בשמורות הטבע והנחלים באזור ומכירים היטב את השטח וגם את סכנותיו."
                    />
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Home">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/forums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Forums">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/alerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="Alerts">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/safety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Safety"
            android:textColor="@color/primary_color"
            android:textStyle="bold">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Profile">
        </com.google.android.material.textview.MaterialTextView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/ic_launcher_background_wave_down"></ImageView>

</androidx.appcompat.widget.LinearLayoutCompat>